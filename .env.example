# ===========================================
# TELEGRAM BOT CONFIGURATION
# ===========================================

# Telegram Bot Token (Required)
# Get this from @BotFather on Telegram
TELEGRAM_TOKEN=your_telegram_bot_token_here

# Admin Telegram User ID (Required)
# This is the numeric ID of the admin user who can use /broadcast and /stats
ADMIN_ID=your_telegram_user_id_here

# ===========================================
# WEBHOOK CONFIGURATION
# ===========================================

# Base URL for your deployed application
# For Render: https://your-app-name.onrender.com
# For Railway: https://your-app-name.up.railway.app
# For local development: http://localhost:8000
WEBHOOK_BASE_URL=https://your-app-name.onrender.com

# Webhook token for security (generate a random string)
# This should be a unique, hard-to-guess string
WEBHOOK_TOKEN=your_webhook_token_here

# ===========================================
# AI CONFIGURATION (Optional)
# ===========================================

# Enable AI categorization (true/false)
USE_LOCAL_AI=false

# OpenRouter API Key for AI categorization (get free tier at openrouter.ai)
# This enables AI-powered job categorization
OPENROUTER_API_KEY=your_openrouter_api_key_here

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# Database file path
# For production, consider using PostgreSQL or other production databases
DB_FILE=database.db

# ===========================================
# SCHEDULING CONFIGURATION
# ===========================================

# Timezone for scheduling (IANA timezone format)
TIMEZONE=Asia/Kolkata

# Scraping interval in hours
SCRAPE_INTERVAL_HOURS=3

# Daily alert time in hours (24-hour format)
DAILY_ALERT_HOUR=9

# ===========================================
# MESSAGING CONFIGURATION
# ===========================================

# Batch size for sending messages (to avoid rate limits)
SEND_BATCH_SIZE=25

# Sleep time between batches in seconds
SEND_BATCH_SLEEP=0.6

# ===========================================
# LOGGING CONFIGURATION
# ===========================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ===========================================
# EXTERNAL SERVICES (Optional)
# ===========================================

# RemoteOK API key (if required in future)
REMOTEOK_API_KEY=your_remoteok_api_key_here

# Additional job board API keys can be added here
# INDEED_API_KEY=your_indeed_api_key_here
# LINKEDIN_API_KEY=your_linkedin_api_key_here